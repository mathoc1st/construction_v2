generator client {
  provider = "prisma-client"
  output   = "src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum BuildingType {
  FRAME
  BARN
  CONTAINER
}

enum FinishType {
  COLD
  WARM
  ALL_YEAR
  ALL_YEAR_150
  ALL_YEAR_200
}

model User {
  id           Int      @id @default(autoincrement())
  username     String   @unique
  passwordHash String

  sessions     Session[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Session {
  id         Int      @id @default(autoincrement())
  sessionID  String   @unique
  userId     Int
  expiresAt  DateTime

  user       User     @relation(fields: [userId], references: [id])

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Building {
  id Int @id @default(autoincrement())
  type BuildingType
  name String
  startingPrice Int
  size String
  length Int
  width Int
  floors Int
  bathrooms Int
  bedrooms Int
  veranda Boolean

  views Int @default(0)


  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  images Image[]
  finishes Finish[]
}

model Image {
  id Int @id @default(autoincrement())
  filename String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  building Building @relation(fields: [buildingId], references: [id], onDelete: Cascade)
  buildingId Int
}

model Finish {
  id Int @id @default(autoincrement())
  type FinishType
  oldPrice Int?
  price Int
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  options FinishOption[]

  building Building @relation(fields: [buildingId], references: [id], onDelete: Cascade)
  buildingId Int
}
model FinishOption {
  id Int @id @default(autoincrement())
  description String 
  isAvailable Boolean 

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  finish Finish @relation(fields: [finishId], references: [id], onDelete: Cascade)
  finishId Int
}